@model Blog.Domain.Entities.UserProfile

@{
    ViewData["Title"] = "Create";
}

<h1>Edit your profile</h1>

<h4>UserProfile</h4>
<hr />
@if (TempData["Message"] != null)
{
    <div class="p-3 mb-2 bg-danger text-white">@TempData["Message"]</div>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" disabled value="@User.Identity.Name" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PenName" class="control-label"></label>
                <input asp-for="PenName" class="form-control" />
                <span asp-validation-for="PenName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
