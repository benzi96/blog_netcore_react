<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" id="navbardrop" data-toggle="dropdown" asp-controller="Posts" asp-action="Index">Hello @User.Identity.Name!</a>
        <div class="dropdown-menu">
            <a class="dropdown-item" asp-controller="Posts" asp-action="Index">Manage posts</a>
            <a class="dropdown-item" asp-controller="UserProfiles" asp-action="Create">Edit your profile</a>
        </div>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-controller="Account" asp-action="SignOut">
            <button  type="submit" class="nav-link btn btn-link">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="SignIn">Login</a>
    </li>
}
</ul>
